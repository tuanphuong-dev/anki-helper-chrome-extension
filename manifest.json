{
  "manifest_version": 3,
  "name": "Anki Vocabulary Helper",
  "version": "1.0",
  "description": "Add selected English words to Anki via Chrome context menu.",
  "permissions": ["contextMenus", "nativeMessaging", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/compromise.min.js", 
        "content.js"
      ]
    }
  ]
}
